{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./", // Ensure proper resolution of modules
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types"], // Specify where TypeScript should look for types
    "allowSyntheticDefaultImports": true, // Allow default imports for modules without default export
    "esModuleInterop": true // Improve compatibility with CommonJS modules
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
