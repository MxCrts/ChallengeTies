{
  "expo": {
    "name": "ChallengeTies",
    "slug": "ChallengeMe",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": false,
      "requiresFullScreen": true,
      "buildNumber": "2",
      "bundleIdentifier": "com.mxcrts.ChallengeTies",
      "googleServicesFile": "./GoogleService-Info.plist",
      "associatedDomains": [
        "applinks:challengeties.app",
        "applinks:www.challengeties.app"
      ],
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "LSApplicationQueriesSchemes": [
          "myapp"
        ],
        "GADApplicationIdentifier": "ca-app-pub-4725616526467159~9688398116",
        "NSUserTrackingUsageDescription": "Votre identifiant peut être utilisé pour des publicités plus pertinentes afin de soutenir l'app.",
        "SKAdNetworkItems": [
          { "SKAdNetworkIdentifier": "cstr6suwn9.skadnetwork" }
        ],
        "NSPhotoLibraryUsageDescription": "Nous avons besoin d'accéder à votre photothèque pour choisir une photo de profil.",
        "NSCameraUsageDescription": "Nous avons besoin d'accéder à la caméra pour prendre une photo de profil.",
        "NSPhotoLibraryAddUsageDescription": "Autorisez l'ajout de photos pour enregistrer votre image de profil.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "versionCode": 2,
      "softwareKeyboardLayoutMode": "resize",
      "package": "com.mxcrts.ChallengeTies",
      "googleMobileAdsAppId": "ca-app-pub-4725616526467159~2289013149",
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "com.google.android.c2dm.permission.RECEIVE",
        "com.google.android.gms.permission.AD_ID",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "googleServicesFile": "./google-services.json",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            { "scheme": "myapp", "host": "challenge", "pathPrefix": "/" },
            { "scheme": "myapp", "host": "challenge-details", "pathPrefix": "/" },
            { "scheme": "https", "host": "challengeties.app", "pathPrefix": "/challenge-details" },
            { "scheme": "https", "host": "challengeties.app", "pathPrefix": "/challenge" },
            { "scheme": "https", "host": "www.challengeties.app", "pathPrefix": "/challenge-details" },
            { "scheme": "https", "host": "www.challengeties.app", "pathPrefix": "/challenge" }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
      "expo-localization",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-4725616526467159~2289013149",
          "iosAppId": "ca-app-pub-4725616526467159~9688398116"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#FFB800",
          "sounds": []
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Accéder à vos photos pour choisir une image de profil.",
          "cameraPermission": "Accéder à l'appareil photo pour prendre une photo de profil."
        }
      ],
      "expo-mail-composer"
    ],
    "newArchEnabled": false,
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": { "origin": false },
      "eas": { "projectId": "f472e9b7-ef09-41b7-81c6-9a4dc44f2f37" }
    }
  }
}
